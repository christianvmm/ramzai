generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // e.g. mysql://user:password@localhost:3306/mydb
}

model Song {
  id              String   @id @default(uuid())
  slug            String   @unique
  title           String
  recipientName   String   @map("recipient_name")
  dedication      String   @db.Text
  genre           String   @default("")
  lyrics          String   @db.Text
  lyricsPreview   String   @map("lyrics_preview") @db.Text
  audioURL        String   @map("audio_url")
  audioPreviewURL String   @map("audio_preview_url")
  coverImage      String   @map("cover_image")
  price           Decimal

  purchasedAt     DateTime? @map("purchased_at")
  createdAt       DateTime  @default(now()) @map("created_at")

  // Para Stripe
  checkoutURL      String? @map("checkout_url")  @db.Text       // URL de la Checkout Session
  stripeSessionId  String? @map("stripe_session_id")   // ID de la sesi√≥n para el webhook
  stripeProductId  String   @map("stripe_product_id")
  stripePriceId    String   @map("stripe_price_id")

  @@map("songs")
}

